@model WebApplication2.Models.UserReg

@{

    Layout = null;
    Html.EnableClientValidation(true);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign Up</div>
                    <div>@ViewBag.Message</div>
                        <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="~/Home/Login" onclick="">Sign In</a></div>
                    </div>
                <div class="panel-body">

                    @*<form id="signupform" class="form-horizontal" role="form">*@
                    @using (Html.BeginForm("Signup", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "Registeration Failed, fields.");
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>

                        <div class="form-group">
                            @*<label for="firstname" class="col-md-3 control-label">Username</label>*@
                            @Html.LabelFor(m => m.Username, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="Username" placeholder="Username">*@
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label for="password" class="col-md-3 control-label">Password</label>*@
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @*<input type="password" class="form-control" name="passwd" placeholder="Password">*@
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label for="conpassword" class="col-md-3 control-label">Confirm password</label>*@
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @*<input type="password" class="form-control" name="conpasswd" placeholder="Confirm password">*@
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.email, new { @class = "col-md-3 control-label" })
                            @*<label for="email" class="col-md-3 control-label">Email</label>*@
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="email" placeholder="Email Address">*@
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.phone, new { @class = "col-md-3 control-label" })
                            @*<label for="email" class="col-md-3 control-label">Email</label>*@
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="email" placeholder="Email Address">*@
                                @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="Crqa1" class="col-md-3 control-label">@Model.adminselq</label>
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="Crqa1" placeholder="Answer">*@
                                @Html.TextBoxFor(m => m.Ansforaq, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Ansforaq, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Crqa2" class="col-md-3 control-label">Choose your Question</label>
                            <div class="col-md-9">
                                @*@Html.DropDownList("ddlcountry", Model.Usersqlist1, new { @class = "form-control" })*@
                                @Html.DropDownListFor(model => model.Userq, Model.Usersqlist1, new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group">
                            @*<label for="Crqa2" class="col-md-3 control-label">Give Answer.</label>*@
                            @Html.LabelFor(m => m.Ansforuq, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="Crqa1A" placeholder="Answer">*@
                                @Html.TextBoxFor(m => m.Ansforuq, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Ansforuq, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                @*<button id="btn-signup" value="Signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>*@
                                <input type="submit" value="Signup" class="btn btn-default" />
                               
                            </div>
                        </div>



                    }

                    @*</form>*@

                </div>
            </div>




        </div>
    </div>


</body>

</html>
