                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                @*<a id="btn-login" href="#" class="btn btn-success">Login  </a>*@
                                <input type="submit" value="Login" class="btn btn-default" />
                                <a id="btn-fblogin" href="~/Home/Forgotpassword" class="btn btn-primary">Forgot password?</a>
                                <a id="btn-fblogin" href="~/Home/Signup" class="btn btn-primary"> Sign Up</a>

                            </div>
                        </div>
                  
         }
                    @*</form>*@



                </div>
            </div>
        </div>
        
               
          </div>

