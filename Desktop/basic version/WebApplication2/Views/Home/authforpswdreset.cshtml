@model WebApplication2.Models.Userauthtypes
@{
    ViewBag.Title = "SampleadminView";
    Layout = "~/Views/Shares/_LayoutPage5.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Black Dashboard by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/assets/css/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/assets/demo/demo.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("authforpswdreset", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @*@Html.AntiForgeryToken()*@
        <div class="content">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">

                            <h5 style="font-size:x-large; font:bold"> Welcome @Model.username </h5>
                            <hr color=red>
                            <h5 class="title">Select Authentication Type</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                @if (ViewBag.Message == "Error")
                                {
                                <div class="alert alert-danger">
                                    <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                        <i class="tim-icons icon-simple-remove"></i>
                                    </button>
                                    <span>
                                        <b> Choose an authentication option </b>
                                    </span>
                                   
                                </div>
                                }

                                <div class="row">
                                    <div class="col-md-5 pr-md-1">
                                        <div class="form-group">

                                            @foreach (var mb in Model.userauthlist)
                                            {
                                                if (mb.Isenabel.Value)
                                                {
                                                    <div class="form-check form-check-radio">
                                                        

                                                        <label class="form-check-label">
                                                            @Html.RadioButtonFor(m => m.selecttedans, mb.Authoptions, new { @class = "form-check-input" })
                                                            @if (mb.ID == 0)
                                                            {
                                                                @mb.Rblabell @Model.email
                                                            }
                                                            else if (mb.ID == 1)
                                                            {
                                                                @mb.Rblabell @Model.phone
                                                            }
                                                            else
                                                            {
                                                                @mb.Rblabell
                                                            }


                                                            <span class="form-check-sign"></span>
                                                        </label>
                                                        
                                                    </div>

                                                }

                                            }
                                        </div>
                                    </div>


                                </div>

                            </form>
                        </div>
                        <div class="card-footer">
                            @*<button type="submit" class="btn btn-fill btn-primary">Save</button>*@

                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                @*<a id="btn-login" href="#" class="btn btn-success">Login  </a>*@
                                <input type="submit" value="Next" name="Command" class="btn btn-fill btn-primary" />
                                <a id="btn-fblogin" href="~/Home/Forgotpassword" class="btn btn-fill btn-primary">Back</a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</body>

</html>
