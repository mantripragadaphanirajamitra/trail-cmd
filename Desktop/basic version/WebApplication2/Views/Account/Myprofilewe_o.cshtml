@model WebApplication2.Models.UserReg
@{
    ViewBag.Title = "Myprofile";
    //Layout = "~/Views/Shares/_LayoutPage1.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
}

<h2>Myprofile</h2>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            Welcome @Context.User.Identity.Name
            <div style="float:right; font-size: 85%; position: relative; top:-10px">@Html.ActionLink("Signout", "Signout", "Home") </div>
        </div>
    </div>
    <div class="container">

        <div id="signupbox" style="margin-top:50px" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">

                    </div>
                    <div>@ViewBag.Message</div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px">
                        @*<a id="signinlink" href="~/Home/Login" onclick="">Sign In</a>*@
                    </div>
                </div>
                <div class="panel-body">

                        <div class="form-group">
                            @*<label for="firstname" class="col-md-3 control-label">Username</label>*@
                            <label for="Crqa2" class="col-md-3 control-label">User Name</label>
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="Username" placeholder="Username">*@
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="Crqa2" class="col-md-3 control-label">Email</label>
                            @*<label for="email" class="col-md-3 control-label">Email</label>*@
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="email" placeholder="Email Address">*@
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Crqa2" class="col-md-3 control-label">Phone</label>
                            <div class="col-md-9">
                                @*<input type="text" class="form-control" name="Crqa1" placeholder="Answer">*@
                                @Html.TextBoxFor(m => m.phone, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                                @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Crqa2" class="col-md-3 control-label">SQuestion</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Userqs, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                                @Html.ValidationMessageFor(m => m.Userqs, "", new { @class = "text-danger" })
                            </div>
                         </div>

                            
                        <div class="form-group">
                            <label for="Crqa2" class="col-md-3 control-label">Ganswer</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Ansforuq, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                                @Html.ValidationMessageFor(m => m.Ansforuq, "", new { @class = "text-danger" })
                            </div>
                        </div>


                            <div class="form-group">
                                <!-- Button -->
                                <div class="col-md-offset-3 col-md-9">
                                    @*<button id="btn-signup" value="Signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>*@
                                    <a id="btn-fblogin" href="~/Account/Myprofile" class="btn btn-primary">Edit</a>
                                    
                                </div>

                            </div>






                        </div>
            </div>




        </div>

    </div>


</body>
