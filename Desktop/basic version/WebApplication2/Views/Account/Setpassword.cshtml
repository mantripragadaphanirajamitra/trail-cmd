@model WebApplication2.Models.Account
@{
    ViewBag.Title = "SampleadminView";
    Layout = "~/Views/Shares/_LayoutPage5.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Black Dashboard by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/assets/css/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/assets/demo/demo.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("Setpassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <div class="content">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 style="font-size:x-large; font:bold"> Welcome @Model.username </h5>
                            <hr color=red>
                            <h5 class="title">Set Password</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                @if (ViewBag.Message == "Success")
                                {
                                    <script type="text/javascript">
                                        $(document).ready(function () {


                                            $("#displayusr").hide();
                                            $("#displayusr1").hide();

                                            $("#display").hide();
                                        });
                                    </script>

                                    <div class="alert alert-success">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="tim-icons icon-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b>Password Reset Successful</b>
                                        </span>
                                    </div>
                                }
                                else
                                {


                                    if (ViewBag.Message == "Error1")
                                    {
                                        <div class="alert alert-danger">
                                            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="tim-icons icon-simple-remove"></i>
                                            </button>
                                            <span>
                                                <b>Password and Confirm Password Mismatch </b>
                                            </span>
                                        </div>
                                    }

                                    if (ViewBag.Message == "Error2")

                                    {
                                        <div class="alert alert-danger">
                                            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="tim-icons icon-simple-remove"></i>
                                            </button>
                                            <span>
                                                <b>Server connection Error</b>
                                            </span>
                                        </div>
                                    }
                                    if (ViewBag.Message == "Error3")

                                    {
                                        <div class="alert alert-danger">
                                            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="tim-icons icon-simple-remove"></i>
                                            </button>
                                            <span>
                                                <b>Password does not meet the complexity requirements</b>
                                            </span>
                                        </div>
                                    }
                                }
                                <div class="row" id="displayusr">
                                    <div class="col-md-8 pr-md-1">
                                        <div class="form-group">
                                            <i class="tim-icons icon-lock-circle"></i>
                                            <label>Password</label>
                                            @Html.PasswordFor(Model => Model.password, new { @class = "form-control" })

                                        </div>
                                    </div>



                                </div>
                                <div class="row" id="displayusr1">
                                    <div class="col-md-8 pr-md-1">
                                        <div class="form-group">
                                            <i class="tim-icons icon-lock-circle"></i>
                                            <label>Confirm Password</label>
                                            @Html.PasswordFor(Model => Model.Confirmpassword, new { @class = "form-control" })

                                        </div>
                                    </div>



                                </div>

                            </form>
                        </div>
                        <div class="card-footer">
                            @*<button type="submit" class="btn btn-fill btn-primary">Save</button>*@

                            <!-- Button -->

                            <div class="pr-md-1 controls">
                                @*<a id="btn-login" href="#" class="btn btn-success">Login  </a>*@
                                <input type="submit" value="ResetPassword" id="display" name="Command" class="btn btn-fill btn-primary" />
                                <span>  </span>
                                @*<input type="button" id="stopid" onclick="self.close()" value="Go to Login" name="Command" class="btn btn-fill btn-primary" style='display:none;' />*@
                                <button type="button" id="stopid" onclick="self.close()" class="btn btn-primary">Close</button>
                            </div>
                            @foreach (var mb in Model.plist)
                            {
                                if (mb.Isenabel)
                                {
                                    <div>
                                        <span>
                                            @mb.Label
                                        </span>
                                    </div>
                                }


                            }
                        </div>

                    </div>
                </div>
            </div>

        </div>

    }
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script type="text/javascript">
        $(document).ready(function () {
            if (@ViewBag.Message == "Success") {
            
                $("#displayusr").hide();
                $("#displayusr1").hide();
                $("#stopid").show();
            }
        });
    </script>
</body>

</html>
