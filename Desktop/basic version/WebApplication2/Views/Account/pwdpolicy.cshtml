@model WebApplication2.Models.Pwdpolicycon

@{
    ViewBag.Title = "SampleadminView";
    Layout = "~/Views/Shares/_LayoutPage3.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Black Dashboard by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/assets/css/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/assets/demo/demo.css" rel="stylesheet" />
</head>
<body>
    <div class="content">
        @using (Html.BeginForm("pwdpolicy", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {


            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="title">Password Policy</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                @if (ViewBag.Message == "Success")
                                {
                                    <div class="alert alert-success">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="tim-icons icon-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b>Successfully Updated</b>
                                        </span>
                                    </div>
                                }
                                @if (ViewBag.Message == "Error")
                                {
                                    <div class="alert-danger">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="tim-icons icon-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b> Something went wrong</b>
                                        </span>
                                    </div>
                                }
                                    <div class="row">
                                        <div class="col-md-7 px-md-10">
                                            <div class="form-group">
                                                <label class="col-6">Password minimum length</label>
                                                @*@Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })*@
                                                @Html.CheckBoxFor(m => m.pwdminlen, new { htmlAttributes = new { @class = "form-check-input" } })
                                                @*<input type="text" class="form-control" placeholder="Username" value="michael23">*@
                                            </div>
                                        </div>
                                        <div class="col-md-7 px-md-10">
                                            <div class="form-group">
                                                <label class="col-6">Capital letter first</label>
                                                @*@Html.LabelFor(m => m.smsotp, new { @class = "col-md-3 control-label" })*@
                                                @Html.CheckBoxFor(m => m.capfirst, new { htmlAttributes = new { @class = "form-control" } })
                                                @*<input type="email" class="form-control" placeholder="mike@email.com">*@
                                            </div>
                                        </div>
                                        <div class="col-md-7 px-md-10">
                                            <div class="form-group">
                                                <label class="col-6">Must include special character</label>
                                                @*@Html.LabelFor(m => m.challengeqs, new { @class = "col-md-3 control-label" })*@
                                                @Html.CheckBoxFor(m => m.spclchar, new { htmlAttributes = new { @class = "form-control" } })
                                                @*<input type="text" class="form-control" placeholder="Company" value="Mike">*@
                                            </div>
                                        </div>
                                        <div class="col-md-7 px-md-10">
                                            <div class="form-group">
                                                <label class="col-6">Does not match with last entered three passwords</label>
                                                @*@Html.LabelFor(m => m.challengeqs, new { @class = "col-md-3 control-label" })*@
                                                @Html.CheckBoxFor(m => m.lastpwd, new { htmlAttributes = new { @class = "form-control" } })
                                                @*<input type="text" class="form-control" placeholder="Company" value="Mike">*@
                                            </div>
                                        </div>
                                    </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            @*<button type="submit" class="btn btn-fill btn-primary">Update</button>*@
                            <input type="submit" value="Update" name="Command" class="btn btn-fill btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>
