
@{
    ViewBag.Title = "SampleadminView";
    Layout = "~/Views/Shares/_LayoutPage3.cshtml";
}

@model WebApplication2.Models.Admindetails
<!DOCTYPE html>

<html>

@{
    ViewBag.Title = "SampleDb";
    Layout = "~/Views/Shares/_LayoutPage3.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Black Dashboard by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/assets/css/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/assets/demo/demo.css" rel="stylesheet" />
</head>
<body>
  
    <div class="content">
        @using (Html.BeginForm("adminview", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="title">Admin settings</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                @if (ViewBag.Message == "Success1")
                                {
                                    <div class="alert alert-success">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="tim-icons icon-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b>Sucessfully Updated Server Settings</b>
                                        </span>
                                    </div>
                                }
                                else
                                {


                                    if (ViewBag.Message == "Success2")
                                    {
                                        <div class="alert alert-success">  
                                            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="tim-icons icon-simple-remove"></i>
                                            </button>
                                            <span>
                                                <b>Connection Success </b>
                                            </span>
                                        </div>
                                    }

                                    if (ViewBag.Message == "Error")

                                    {
                                        <div class="alert alert-danger">
                                            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="tim-icons icon-simple-remove"></i>
                                            </button>
                                            <span>
                                                <b>Server Connection Unsuccessful</b>
                                            </span>
                                        </div>
                                    }
                                }

                                <div class="row">

                                    <div class="col-md-7 px-md-10">
                                        <div class="form-group">
                                            <i class="tim-icons icon-single-02"></i>
                                            <label>Admin Name</label>
                                            @Html.TextBoxFor(m => m.serveradminname, new { @class = "form-control" })
                                            @*<input type="text" class="form-control" placeholder="Username" value="michael23">*@
                                        </div>
                                    </div>
                                    <div class="col-md-7 px-md-10">
                                        <div class="form-group">
                                            <i class="tim-icons icon-lock-circle"></i>
                                            <label for="exampleInputEmail1">Admin Password</label>
                                            @Html.TextBoxFor(m => m.serveradminpass, new { @class = "form-control" })
                                            @*<input type="email" class="form-control" placeholder="mike@email.com">*@
                                        </div>
                                    </div>

                                    <div class="col-md-7 px-md-10">
                                        <div class="form-group">
                                            <i class="tim-icons icon-laptop"></i>
                                            <label>Domain Name</label>
                                            @Html.TextBoxFor(m => m.DomainName, new { @class = "form-control" })
                                            @*<input type="text" class="form-control" placeholder="Company" value="Mike">*@
                                        </div>
                                    </div>
                                    <div class="col-md-7 px-md-10">
                                        <div class="form-group">
                                            <i class="tim-icons icon-wifi"></i>
                                            <label>Domain IP</label>
                                            @Html.TextBoxFor(m => m.DomainIP, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DomainIP, "", new { @class = "text-danger" })
                                            @*<input type="text" class="form-control" placeholder="Last Name" value="Andrew">*@
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="card-footer">
                            @*<button type="submit" class="btn btn-fill btn-primary">Update</button>*@
                            <input type="submit" value="Update" name="Command" class="btn btn-fill btn-primary" />

                        </div>
                        <span></span>
                        
                        <div class="card-footer">
                            @*<button type="submit" class="btn btn-fill btn-primary">Update</button>*@
                            <input type="submit" value="Test" name="Test" class="btn btn-fill btn-primary" />

                        </div>
                    </div>
                </div>

            </div>
        }
        </div>


    </body>

</html>
