                                    @Html.ValidationMessageFor(m => m.DomainName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.DomainIP, new { @class = "col-md-3 control-label" })
