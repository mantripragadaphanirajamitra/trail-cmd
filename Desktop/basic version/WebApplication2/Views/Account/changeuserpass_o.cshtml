@model WebApplication2.Models.Passwordchange
@{
    Layout = "~/Views/Shares/_LayoutPage2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>changeuserpass</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <div class="jumbotron">
            @if (ViewBag.Message == "Success")
            {
                <div class="alert-success" style="padding-bottom:10px">@ViewBag.Message</div>
            }
            else if (ViewBag.Message == null)
            {

            }
            else
            {
                <div class="alert-danger" style="padding-bottom:15px">@ViewBag.Message</div>
            }
            @using (Html.BeginForm("changeuserpass", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @*@Html.ValidationSummary(true, "Registeration Failed, fields.");*@
                <div id="signupalert" style="display:none" class="alert alert-danger">
                    <p>Error:</p>
                    <span></span>
                </div>

                <div class="form-group">
                    @*<label for="firstname" class="col-md-3 control-label">Username</label>*@
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @*<input type="text" class="form-control" name="Username" placeholder="Username">*@
                        @Html.TextBoxFor(m => m.ChangePassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ChangePassword, "", new { @class = "text-danger" })

                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.ChangePassword, new { @class = "col-md-3 control-label" })
                    @*<label for="email" class="col-md-3 control-label">Email</label>*@
                    <div class="col-md-9">
                        @*<input type="text" class="form-control" name="email" placeholder="Email Address">*@
                        @Html.TextBoxFor(m => m.ChangePassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ChangePassword, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                    @*<label for="email" class="col-md-3 control-label">Email</label>*@
                    <div class="col-md-9">
                        @*<input type="text" class="form-control" name="email" placeholder="Email Address">*@
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                    </div>




                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                @*<button id="btn-signup" value="Signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>*@
                                <input type="submit" value="Update" class="btn btn-default" />
                                <span style="margin-left:8px;"></span>
                            </div>
                        </div>




                        }
                    </div>
                </div>
</body>
</html>
