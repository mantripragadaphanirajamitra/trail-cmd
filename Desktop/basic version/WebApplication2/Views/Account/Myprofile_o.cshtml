@model WebApplication2.Models.UserReg
@{
    ViewBag.Title = "Myprofile";
    //Layout = "~/Views/Shares/_LayoutPage1.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
}

<h2>Myprofile</h2>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">Welcome @Context.User.Identity.Name 
            <div style="float:right; font-size: 85%; position: relative; top:-10px">@Html.ActionLink("Signout", "Signout", "Home") </div>
        </div>
        </div>
        <div class="container">

            <div id="signupbox" style="margin-top:50px" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">

                        </div>
                        <div>@ViewBag.Message</div>
                        <div style="float:right; font-size: 85%; position: relative; top:-10px">
                            @*<a id="signinlink" href="~/Home/Login" onclick="">Sign In</a>*@
                        </div>
                    </div>
                    <div class="panel-body">

                        @*<form id="signupform" class="form-horizontal" role="form">*@
                        @using (Html.BeginForm("Myprofile", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                            @Html.ValidationSummary(true, "Registeration Failed, fields.");
                            <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Error:</p>
                                <span></span>
                            </div>

                            <div class="form-group">
                                @*<label for="firstname" class="col-md-3 control-label">Username</label>*@
                                @Html.LabelFor(m => m.Username, new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @*<input type="text" class="form-control" name="Username" placeholder="Username">*@
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>


                                        <div class="form-group">
                                            @Html.LabelFor(m => m.email, new { @class = "col-md-3 control-label" })
                                            @*<label for="email" class="col-md-3 control-label">Email</label>*@
                                            <div class="col-md-9">
                                                @*<input type="text" class="form-control" name="email" placeholder="Email Address">*@
                                                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.phone, new { @class = "col-md-3 control-label" })
                                            <div class="col-md-9">
                                                @*<input type="text" class="form-control" name="Crqa1" placeholder="Answer">*@
                                                @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="Crqa2" class="col-md-3 control-label">Choose your Question.</label>
                                            <div class="col-md-9">
                                                @*@Html.DropDownList("ddlcountry", Model.Usersqlist1, new { @class = "form-control" })*@
                                                @Html.DropDownListFor(model => model.Userq, Model.Usersqlist1, new { @class = "form-control" })

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @*<label for="Crqa2" class="col-md-3 control-label">Give Answer.</label>*@
                                            @Html.LabelFor(m => m.Ansforuq, new { @class = "col-md-3 control-label" })
                                            <div class="col-md-9">
                                                @*<input type="text" class="form-control" name="Crqa1A" placeholder="Answer">*@
                                                @Html.TextBoxFor(m => m.Ansforuq, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Ansforuq, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <!-- Button -->
                                            <div class="col-md-offset-3 col-md-9">
                                                @*<button id="btn-signup" value="Signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>*@
                                                <input type="submit" value="Update" class="btn btn-default" />
                                                <span style="margin-left:8px;">or</span>
                                            </div>
                                         
                                            </div>



                                            }
                                            @*</form>*@

                                        </div>
                </div>




            </div>

        </div>


</body>
